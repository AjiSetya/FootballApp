<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/card_margin_vertical"
            android:layout_marginBottom="@dimen/card_margin_vertical"
            android:layout_marginRight="@dimen/card_margin_horizontal"
            android:layout_marginLeft="@dimen/card_margin_horizontal">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/card_itempadding">

            <ImageView
                    android:layout_width="@dimen/team_img_size"
                    android:layout_height="@dimen/team_img_size"
                    android:src="@mipmap/ic_launcher"
                    android:id="@+id/item_imgplayer"
                    android:layout_weight="0"/>

            <TextView
                    android:layout_weight="0.2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/card_margin_horizontal"
                    android:id="@+id/item_nameplayer"
                    android:text="@string/app_name"
                    android:textSize="@dimen/item_nameplayer"
                    android:layout_marginStart="@dimen/card_margin_horizontal"/>

            <TextView
                    android:layout_weight="0.3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:id="@+id/item_positionplayer"
                    android:text="@string/app_name"
                    android:textSize="@dimen/item_nameplayer"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>